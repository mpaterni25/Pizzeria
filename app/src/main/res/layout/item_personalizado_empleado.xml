<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/empleado1" />

        <TextView
            android:id="@+id/txtCedulaE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:layout_toEndOf="@+id/imgFoto"
            android:layout_toRightOf="@+id/imgFoto"
            android:text="TextView"
            android:textColor="?android:attr/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtNombreE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtCedulaE"
            android:layout_alignStart="@+id/txtCedulaE"
            android:layout_below="@+id/txtCedulaE"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="?android:attr/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtApellidoE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgFoto"
            android:layout_alignLeft="@+id/txtNombreE"
            android:layout_alignStart="@+id/txtNombreE"
            android:text="TextView"
            android:textColor="?android:attr/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>