<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="115dp"
            android:layout_height="115dp"
            app:srcCompat="@drawable/pizza2"
            android:layout_alignBottom="@+id/txtPedidoP" />

        <TextView
            android:id="@+id/txtTama単oP"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/imgFoto"
            android:text="TextView"
            android:textColor="?android:attr/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtPrecioP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtTama単oP"
            android:layout_alignStart="@+id/txtTama単oP"
            android:layout_below="@+id/txtTama単oP"
            android:text="TextView"
            android:textColor="?android:attr/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtIngredientesP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtPrecioP"
            android:layout_alignStart="@+id/txtPrecioP"
            android:layout_below="@+id/txtPrecioP"
            android:text="TextView"
            android:textColor="?android:attr/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtPedidoP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtIngredientesP"
            android:layout_alignStart="@+id/txtIngredientesP"
            android:layout_below="@+id/txtIngredientesP"
            android:text="TextView"
            android:textColor="?android:attr/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="normal|bold" />
    </RelativeLayout>
</LinearLayout>